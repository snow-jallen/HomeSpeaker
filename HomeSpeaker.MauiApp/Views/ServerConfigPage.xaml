<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:HomeSpeaker.MauiApp.ViewModels"
             x:Class="HomeSpeaker.MauiApp.Views.ServerConfigPage"
             x:DataType="vm:ServerConfigViewModel"
             Title="Add Server">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <Label Text="Add New HomeSpeaker Server" 
                   FontSize="24" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <VerticalStackLayout Spacing="10">
                <Label Text="Server Nickname:" FontSize="16"/>
                <Entry Text="{Binding Nickname}" 
                       Placeholder="e.g., Living Room"
                       FontSize="16"/>
            </VerticalStackLayout>

            <VerticalStackLayout Spacing="10">
                <Label Text="Server URL:" FontSize="16"/>
                <Entry Text="{Binding ServerUrl}" 
                       Placeholder="e.g., https://192.168.1.100:5001"
                       Keyboard="Url"
                       FontSize="16"/>
            </VerticalStackLayout>

            <HorizontalStackLayout Spacing="10">
                <CheckBox IsChecked="{Binding IsDefault}"/>
                <Label Text="Set as default server" 
                       FontSize="16"
                       VerticalOptions="Center"/>
            </HorizontalStackLayout>

            <Label Text="{Binding ErrorMessage}" 
                   TextColor="Red"
                   FontSize="14"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}"/>

            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                <Button Grid.Column="0" 
                        Text="Cancel" 
                        Command="{Binding CancelCommand}"
                        BackgroundColor="LightGray"
                        TextColor="Black"/>
                <Button Grid.Column="1" 
                        Text="Save" 
                        Command="{Binding SaveServerCommand}"/>
            </Grid>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
